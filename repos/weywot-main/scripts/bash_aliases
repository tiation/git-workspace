# preferences
alias cdd="builtin cd"
alias q="exit"
alias c="clear"
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'
alias up='clear && figlet update && sudo apt update && sudo apt upgrade -y && flatpak update -y'
alias install='sudo apt install -y'
alias purge='sudo apt remove --purge'
alias remove='sudo apt remove -y'
alias search='sudo apt search'
alias show='apt show'
alias policy='apt-cache policy'
alias depends='apt-cache depends'
alias ppa='sudo add-apt-repository'
alias purgeppa='sudo ppa-purge'
alias list='apt list --upgradable'
alias installed='sudo apt list --installed'
alias cleaner='sudo apt clean && sudo apt autoclean && sudo apt autoremove -y'
alias dmesg='sudo dmesg'
alias updatefont="fc-cache -v -f"
alias song='youtube-dl -x --extract-audio --audio-format mp3 --audio-quality 0 --prefer-ffmpeg '
alias neofetch='clear && neofetch'
alias cmatrix='cmatrix -ab -C cyan'
alias moc='mocp'
alias ip='figlet "$(curl --silent http://ipecho.net/plain)" | lolcat'
alias sudo!!='sudo !!'
alias nano='nano -F'
alias gdm='sudo ~/bin/change-gdm-background '
alias backup='dconf dump / > ~/Documents/"Pop_OS Backup"/"$(date -I)"_pop-os-desktop'
alias fixsound='systemctl --user restart pulseaudio'
alias fix='gsettings reset org.gnome.shell app-picker-layout'
